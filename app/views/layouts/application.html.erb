<!DOCTYPE html>
<html>
  <head>
    <title>Willow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
          };
      </script>
    <% end %>
 
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
